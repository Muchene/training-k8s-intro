apiVersion: apps/v1
kind: Deployment
metadata:
  name: joker
  namespace: foo
spec:
  replicas: 4
  template:
    spec:
      containers:
      - name: web
        image: gcr.io/aramse-training/my-joker-app:1.0
        readinessProbe:
          httpGet:
            path: /health
            port: 80
